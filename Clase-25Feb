CREATE TABLE libros
  (
    book_id           INTEGER,
    isbn              VARCHAR2(13),
    titulo            VARCHAR2(200),
    resumen           VARCHAR2(2000),
    autor             VARCHAR2(200),
    fecha_publicacion DATE,
    num_pag           NUMBER,
    CONSTRAINT pk_book_id PRIMARY KEY (book_id)
  );
SET serveroutput ON;
CREATE sequence sec_libros start with 1 increment BY 1 nomaxvalue;
CREATE OR REPLACE PROCEDURE guardarlibros
  (
    my_id OUT INTEGER,
    my_isbn    IN VARCHAR2,
    my_titulo  IN VARCHAR2,
    my_resumen IN VARCHAR2,
    my_autor   IN VARCHAR2,
    dia        IN INTEGER,
    mes        IN VARCHAR2,
    anio       IN INTEGER,
    my_paginas IN INTEGER
  )
AS
  my_fecha DATE;
BEGIN
  my_fecha:=to_date(''||dia||'-'||mes||'-'||anio);
  SELECT sec_libros.nextval INTO my_id FROM dual;
  INSERT
  INTO libros VALUES
    (
      my_id,
      my_isbn,
      my_titulo,
      my_resumen,
      my_autor,
      my_fecha,
      my_paginas
    );
END;
/
DECLARE
  valor_id INTEGER;
BEGIN
  guardarlibros(valor_id, '3579','Titanic', 'Un barco que se hunde porque se impact√≥ con un Iceberg','Juanita',17,'mar',1995,650);
END;
/

UPDATE libros SET titulo='Matando a Nemo' WHERE titulo='Matando a nemi';

SELECT * FROM libros;
